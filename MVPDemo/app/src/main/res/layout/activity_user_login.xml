<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/id_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="用户名" />

    <EditText
        android:id="@+id/id_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="密码"
        android:layout_below="@id/id_et_username"/>

    <Button
        android:id="@+id/id_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空"
        android:layout_below="@+id/id_et_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="103dp" />

    <Button
        android:id="@+id/id_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_below="@+id/id_et_password"
        android:layout_toStartOf="@+id/id_btn_clear" />

    <ProgressBar
        android:id="@+id/id_pb_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_clear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="154dp"
        android:visibility="gone"/>


</RelativeLayout>